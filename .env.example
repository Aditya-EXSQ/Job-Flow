# ============================================
# Job-Flow Scraper Configuration
# ============================================

# --------------------------------------------
# Proxy Configuration
# --------------------------------------------
# Choose your proxy provider from: none, scrapeops, scraperapi, generic
# Set to 'none' to disable proxy usage
PROXY_PROVIDER=none

# --- ScrapeOps Proxy ---
# Get your API key from: https://scrapeops.io/
# SCRAPEOPS_API_KEY=your_scrapeops_api_key_here

# --- ScraperAPI Proxy ---
# Get your API key from: https://www.scraperapi.com/
# SCRAPERAPI_API_KEY=your_scraperapi_api_key_here

# --- Generic Proxy (for free proxy services or custom proxies) ---
# Use this for any standard HTTP/SOCKS proxy
# PROXY_SERVER=http://proxy.example.com:8080
# PROXY_USERNAME=your_username
# PROXY_PASSWORD=your_password

# Examples for free proxy services:
# - Spys.one: PROXY_SERVER=http://proxy.spys.one:8080
# - Free Proxy: PROXY_SERVER=http://free-proxy.cz:8080
# - ProxyScrape: PROXY_SERVER=http://proxyscrape.com:8080

# --------------------------------------------
# Browser Settings
# --------------------------------------------
HEADLESS=False
# BROWSER_TYPE=chromium
# IGNORE_HTTPS_ERRORS=True

# --------------------------------------------
# Rate Limiting & Concurrency
# --------------------------------------------
# MAX_CONCURRENT_PAGES=5
# MAX_CONCURRENT_SERP=1

# --------------------------------------------
# Retries
# --------------------------------------------
# MAX_RETRIES=3
# RETRY_BASE_DELAY=5.0
# RETRY_MAX_DELAY=10.0

# --------------------------------------------
# Timeouts (in milliseconds)
# --------------------------------------------
# NAVIGATION_TIMEOUT=30000
# SELECTOR_TIMEOUT=10000
